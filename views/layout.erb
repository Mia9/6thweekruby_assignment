<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" rel="stylesheet">
  <link rel="stylesheet" href="style.css">
  <title>IMdB Simple Clone</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <div class="container-fluid">
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link active" href="/">
          <img src="IMDB-logo.png" width="35px">
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Popular</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/login">Login</a>
      </li>
      <li class="nav-item">
        <a class="nav-link disabled" href="#">Upcoming</a>
      </li>
    </ul>
    <form action="/search" method="post" class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
  </div>
</nav>

  
  <% if flash[:message]%>
      <%= flash[:message]%>
  <%end%>
  <br>
  <%= yield %>
  <% if user_signed_in? %>
    <form action="/logout" method="post">
      <input type="submit" value="Logout">
    </form>
  <%end%>
    <!-- <br>
    <a href="/register">Register</a> or
    <a href="/login">Login</a>
  <%#end%> -->

</body>
</html>
